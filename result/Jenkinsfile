pipeline {
    
    agent any
    tools {
        nodejs 'NodeJS 8.9.0'
    }

    stages{
        stage('build'){
            when{
              changeset "**/result/**"
            }
            steps{
                echo 'Compiling result app'
                dir('result'){
                sh 'npm install'
            }
          }
        }
        stage('test'){
            when{
              changeset "**/result/**"
            }
            steps{
                echo 'Running Unit Tests on result app'
                dir('result'){
                sh 'npm install && npm test'
                }
            }
        }
    }
    post{
        always{
            echo 'This pipeline run is completed.'
        }
    }
}
